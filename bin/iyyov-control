#!/usr/bin/env jruby
# -*- ruby -*-

$LOAD_PATH.unshift File.join( File.dirname(__FILE__), "..", "lib" )

require 'rubygems'
require 'rjack-logback'

Logback.config_console( :level => Logback::DEBUG )

require 'iyyov'

Iyyov.context do |c|

  ARGV.each do |afile|
    c.load_file( afile )
  end
  c.event_loop
end
